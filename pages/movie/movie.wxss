}
.select{
  width: 32%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  color: #ffffff;
  font-size: 18px;
  border-bottom: 1px solid #777777;
}
.normal{
  width: 32%;
  height: 45px;
  line-height: 45px;
  text-align: center;
